@model IEnumerable<MovieApp.BLL.DTO.MovieDto>

@{
    ViewData["Title"] = "Movies List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Movie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Director</th>
            <th>Genre</th>
            <th>Year</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Director</td>
                <td>@movie.Genre</td>
                <td>@movie.Year</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>