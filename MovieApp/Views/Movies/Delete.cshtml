@model MovieApp.BLL.DTO.MovieDto

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h2>Are you sure you want to delete this movie?</h2>
    <h4>@Model.Title</h4>
    <p><strong>Director:</strong> @Model.Director</p>
    <p><strong>Genre:</strong> @Model.Genre</p>
    <p><strong>Year:</strong> @Model.Year</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

